# .env.prod.example
# Copy this file to .env.prod and update the values for your production environment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this-immediately
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DOMAIN=yourdomain.com

# Database Configuration (Production)
DB_NAME=solidus_prod
DB_USER=solidus_prod
DB_PASSWORD=your-secure-database-password
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Email Configuration (Production - SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Solidus <noreply@yourdomain.com>

# Media and Static Files (Production)
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static
MEDIA_URL=/media/
STATIC_URL=/static/

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=86400
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True

# File Upload Settings (Production)
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB
FILE_UPLOAD_PERMISSIONS=0o644

# Asset Processing (Production)
ASSET_PROCESSING_ENABLED=True
THUMBNAIL_SIZES=150x150,300x300,600x600,1200x1200
IMAGE_QUALITY=85
MAX_IMAGE_SIZE=2048x2048

# Feed Generation (Production)
FEED_GENERATION_ENABLED=True
DEFAULT_FEED_FORMAT=json
MAX_FEED_SIZE=100000
FEED_CACHE_TIMEOUT=3600

# API Settings (Production)
API_PAGE_SIZE=50
API_MAX_PAGE_SIZE=100
API_THROTTLE_RATE=1000/hour

# Logging (Production)
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE_PATH=/app/logs/solidus.log
SYSLOG_ENABLED=True

# SSL Certificate (Let's Encrypt)
SSL_EMAIL=admin@yourdomain.com

# AWS S3 Configuration (Optional - for media storage)
USE_S3_STORAGE=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=solidus-media-prod
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=media.yourdomain.com
AWS_DEFAULT_ACL=public-read

# CDN Configuration (Optional)
CDN_ENABLED=False
CDN_URL=https://cdn.yourdomain.com

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Database Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=solidus-backups-prod

# Performance Settings
DATABASE_CONN_MAX_AGE=600
CACHE_TIMEOUT=3600
STATIC_FILE_CACHE_TIMEOUT=2592000  # 30 days

# Rate Limiting
RATE_LIMIT_ENABLED=True
API_RATE_LIMIT=100/hour
LOGIN_RATE_LIMIT=5/minute

# External Services
WEBHOOK_SECRET=your-webhook-secret
API_KEY_ENCRYPTION_KEY=your-32-character-encryption-key

# Docker-specific
UID=1000
GID=1000
COMPOSE_PROJECT_NAME=solidus_prod

# Grafana Configuration
GRAFANA_PASSWORD=your-secure-grafana-password

# Application Version (for deployments)
VERSION=1.0.0
BUILD_NUMBER=
DEPLOYMENT_TIMESTAMP=

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_PASSWORD_RESET=True
ENABLE_TWO_FACTOR_AUTH=False
ENABLE_API_DOCS=False
ENABLE_DEBUG_TOOLBAR=False

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id