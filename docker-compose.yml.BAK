# docker-compose.yml

services:
  postgres:
    image: postgres:15-alpine
    container_name: solidus_postgres
    environment:
      POSTGRES_DB: solidus
      POSTGRES_USER: solidus
      POSTGRES_PASSWORD: solidus_password
      PGDATA: /var/lib/postgresql/data/pgdata
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"  # EXPOSED to host for host-based migrations
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U solidus"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - solidus_network

  redis:
    image: redis:7-alpine
    container_name: solidus_redis
    command: redis-server --appendonly yes
    volumes:
      - redis_data:/data
    ports:
      - "6379:6379"  # EXPOSED to host for host-based commands
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - solidus_network

  web:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        UID: ${UID:-1000}
        GID: ${GID:-1000}
    container_name: solidus_web
    entrypoint: [ "bash", "/app/docker-entrypoint.sh" ]
    command: [ "uv", "run", "daphne", "-b", "0.0.0.0", "-p", "8000", "solidus.asgi:application" ]
    volumes:
      - .:/app:cached
      - null_venv:/app/.venv
      - media_data:/app/media
      - static_data:/app/static
    ports:
      - "8000:8000"
    # Use Docker-specific environment
    environment:
      - DEBUG=True
      - SECRET_KEY=your-secret-key-here-change-in-production
      - DJANGO_SETTINGS_MODULE=solidus.settings
      - ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web
      - DB_NAME=solidus
      - DB_USER=solidus
      - DB_PASSWORD=solidus_password
      - DB_HOST=postgres  # Docker service name
      - DB_PORT=5432
      - REDIS_HOST=redis  # Docker service name
      - REDIS_PORT=6379
      - REDIS_PASSWORD=
      - EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
      - EMAIL_HOST=mailhog  # Docker service name
      - EMAIL_PORT=1025
      - EMAIL_USE_TLS=False
      - EMAIL_HOST_USER=
      - EMAIL_HOST_PASSWORD=
      - DEFAULT_FROM_EMAIL=noreply@solidus.local
      - CREATE_SUPERUSER=True
      - LOAD_INITIAL_DATA=True
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    networks:
      - solidus_network

  worker:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: solidus_worker
    command: >
      sh -c "
        while true; do
          uv run python manage.py process_assets --batch-size 5;
          uv run python manage.py generate_feeds;
          sleep 60;
        done
      "
    volumes:
      - .:/app:cached
      - null_venv:/app/.venv
      - media_data:/app/media
    # Use same Docker environment as web
    environment:
      - DEBUG=True
      - SECRET_KEY=your-secret-key-here-change-in-production
      - DJANGO_SETTINGS_MODULE=solidus.settings
      - ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web
      - DB_NAME=solidus
      - DB_USER=solidus
      - DB_PASSWORD=solidus_password
      - DB_HOST=postgres
      - DB_PORT=5432
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=
      - EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
      - EMAIL_HOST=mailhog
      - EMAIL_PORT=1025
      - EMAIL_USE_TLS=False
      - EMAIL_HOST_USER=
      - EMAIL_HOST_PASSWORD=
      - DEFAULT_FROM_EMAIL=noreply@solidus.local
    depends_on:
      - postgres
      - redis
      - web
    networks:
      - solidus_network

  nginx:
    image: nginx:alpine
    container_name: solidus_nginx
    volumes:
      - ./config/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - static_data:/app/static:ro
      - media_data:/app/media:ro
    ports:
      - "80:80"
    depends_on:
      - web
    networks:
      - solidus_network

  mailhog:
    image: mailhog/mailhog
    container_name: solidus_mailhog
    ports:
      - "1025:1025"  # SMTP port EXPOSED to host
      - "8025:8025"  # Web interface
    networks:
      - solidus_network

  pgadmin:
    image: dpage/pgadmin4
    container_name: solidus_pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@solidus.local
      PGADMIN_DEFAULT_PASSWORD: admin
    ports:
      - "5050:80"
    depends_on:
      - postgres
    networks:
      - solidus_network
    profiles:
      - tools

volumes:
  postgres_data:
  redis_data:
  media_data:
  static_data:
  null_venv:

networks:
  solidus_network:
    driver: bridge